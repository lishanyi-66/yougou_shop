.address_btn {
  padding: 20rpx;
}
.address_btn button {
  font-size: 28rpx;
}
.user_info {
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.user_info .user_form {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
  color: #000;
}
.user_info .user_form .user_name {
  font-size: 35rpx;
  font-weight: 500;
}
.user_info .user_form .user_phone {
  font-size: 35rpx;
  font-weight: 500;
  margin-left: 40rpx;
}
.user_info .user_address {
  font-size: 25rpx;
}
.goods_cart_list {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.cart_item {
  display: flex;
  flex-direction: row;
}
.checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.image_item {
  flex: 2;
}
.image_item image {
  width: 180rpx;
  height: 180rpx;
}
.cart_info {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin: 0 20rpx;
}
.cart_info .cart_detail {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  margin-bottom: 30rpx;
}
.cart_info .cart_row {
  display: flex;
  justify-content: space-between;
}
.cart_info .cart_row .cart_price {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--themeColor);
}
.cart_info .cart_row .cart_num_tool {
  display: flex;
  flex-direction: row;
}
.cart_info .cart_row .cart_num_tool .num {
  width: 90rpx;
  height: 40rpx;
  background-color: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
}
.footer_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  background-color: white;
  height: 90rpx;
  border-top: 1px solid #999;
}
.footer_tool .all_chk_wrap {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.footer_tool .total_price_wrap {
  flex: 2;
}
.footer_tool .total_price_wrap .price {
  font-size: 40rpx;
  color: #ff6633;
}
.footer_tool .order_pay_wrap {
  flex: 1;
  background-color: #ff6633;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}
